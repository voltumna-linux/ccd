[Unit]
Description=RNM (DPDK) service
Requires=local-fs.target rnm-dpdk-conf.service
After=rnm-dpdk-conf.service

[Service]
EnvironmentFile=/etc/rnm.conf
ExecStartPre=/usr/sbin/dpdk-devbind --bind=vfio-pci 0000:1a:00.1
ExecStart=/usr/sbin/rnm-dpdk -l 1 -n 1 -m 128 --file-prefix rnm -w 0000:1a:00.1 $CLIENTID

[Install]
WantedBy=multi-user.target
